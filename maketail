.SUFFIXES : .cpp .l .y .asn1

install_dirs:
	(mkdir -p $(prefix)/include/esnacc/c++)
	(mkdir -p $(prefix)/include/esnacc/c)
	(mkdir -p $(prefix)/lib)
	(mkdir -p $(prefix)/bin)

.y.c:
	$(YACC) $(YFLAGS) $< -o $@
.l.c:
	$(LEX) -t $< | sed -e 's/#include <unistd.h>//g' > $@
.c.o:
	$(CC) $(CPPFLAGS) $(CFLAGS) $(BLD_FLG) -c -o $@ $<
.cpp.o:
	$(CXX) $(CPPFLAGS) $(CXXFLAGS) $(BLD_FLG) -c -o $@ $<
